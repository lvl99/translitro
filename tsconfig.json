{
  "compilerOptions": {
    "declaration": false,
    "lib": ["es2017"],
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": ["index.ts", "declarations", "lib"],
  "exclude": ["node_modules", "dist", "__tests__", "**/*.?(test|spec).ts"]
}
